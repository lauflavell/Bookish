@model BookModel

@{
    ViewData["Title!!!"] = "Books"; 
}

@if (TempData["Success"] != null)
{
 <p class="alert alert-success" id="successMessage">@TempData["Success"]</p>
}
<div class="text-center">
    <h1 class="display-4">Create a book!</h1>
    <form method = "post" asp-controller="book" asp-action="AddBook">
        <label>Title</label>
        <input asp-for="Title" name="title"><br>
        <label asp-for="Author">Author:</label>
        @Html.DropDownListFor(b => b.AuthorId, new SelectList(ViewBag.authors, "Id", "Name"))<br>
        <label>ISBN:</label>
        <input asp-for="ISBN"><br>
        <label>Date Published:</label>
        <input asp-for="DatePublished"><br>
        <label>Publisher:</label>
        <input asp-for="Publisher"><br>
        <label>Format:</label>
        <input asp-for="Format"><br>
        <label>Genre:</label>
        <input asp-for="Genre"><br>
         <button type="submit">Submit</button>
    </form> 
</div>
